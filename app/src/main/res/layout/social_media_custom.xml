<?xml version="1.0" encoding="utf-8"?>
<ash.wasset.views.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ripple:rv_type="rectangle" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true" >

        <ash.wasset.views.CircleImageView
            android:id="@+id/socialMediaIconImageView"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:src="@color/white"
            android:layout_margin="@dimen/d15"
            android:tint="@color/white"
            ripple:civ_border_color="@color/blue"
            ripple:civ_border_width="1dp"/>

        <ash.wasset.views.MyTextView
            android:id="@+id/socialMediaNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Name"
            android:textColor="@color/blue"
            android:textSize="18dp" />

    </LinearLayout>

</ash.wasset.views.RippleView>